<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dataItem"
            type="com.example.gapsiproyect.daos.ProductsDao" />
    </data>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/baseCardView"
        android:theme="@style/base_cardview"
        app:strokeColor="#D0D0D0"
        app:strokeWidth="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/padding_xlarge"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_standar"
            >


            <TextView
                android:id="@+id/txt_productName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/name_title"
                android:textColor="@color/teal_700"
                android:textSize="@dimen/TextInfoCardView_xxlarge"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_productName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/padding_small"
                android:textStyle="bold"
                android:textSize="@dimen/TextInfoCardView_xxxlarge"
                tools:text="Starbucks Coffee"
                android:text="@{dataItem.name}"
                android:textColor="@color/black"
                />


            <TextView
                android:id="@+id/txt_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_Name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/padding_small"
                android:textStyle="normal"
                android:textSize="@dimen/TextInfoCardView_xxlarge"
                android:text="@string/description_title"
                android:textColor="@color/teal_700"
                />




            <TextView
                android:id="@+id/txt_descriptiontVale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_description"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/padding_small"
                android:textStyle="bold"
                android:textSize="@dimen/TextInfoCardView_large"
                tools:text="The brainchild of our small batch brewer, George Woods. A dangerously drinkable milk sugar- infused Scotch Ale."
                android:text="@{dataItem.description}"
                android:textColor="@color/black"
                />



            <ImageView
                android:id="@+id/img_productImage"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/padding_standar"
                app:layout_constraintTop_toBottomOf="@id/txt_descriptiontVale"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_mic_black_24dp"
                />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>
