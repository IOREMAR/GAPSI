<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_dest">

    <fragment
        android:id="@+id/home_dest"
        android:name="com.example.gapsiproyect.UIFragments.MoviesFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/movies_fragment">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/location_dest" />
    </fragment>
    <fragment
        android:id="@+id/location_dest"
        android:name="com.example.gapsiproyect.UIFragments.DetailMapsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_detail_maps">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/home_dest" />
    </fragment>
</navigation>